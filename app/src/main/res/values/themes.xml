<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoiiMela" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">#eeeeff</item>


    </style>

    <!-- dark mode 99FFFFFF -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#0A945D</item>
        <item name="colorSwitchThumbNormal">#1E1616</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>
    <!-- notification-->
    <style name="notificationIconSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#0A945D</item>
        <item name="colorSwitchThumbNormal">#1E1616</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>

    <!-- security-->
    <style name="PrivacyIconSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#0A945D</item>
        <item name="colorSwitchThumbNormal">#1E1616</item>
        <item name="android:foreground">#99FFFFFF</item>
    </style>
</resources>