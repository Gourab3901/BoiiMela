<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp"
    android:id="@+id/chatListView"
    app:cardBackgroundColor="@color/light_blue1"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/light_blue1"
        >

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Sender Name"
            android:textSize="25dp"
            android:textStyle="bold"

            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/book_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Book Ad Title"
            android:textSize="15dp"

            android:layout_below="@id/sender_name"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"

            />

        <TextView
            android:id="@+id/book_ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Price"
            android:textSize="25dp"

            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/book_ad_title"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>