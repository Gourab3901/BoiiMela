<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/napbar"
            app:menu="@menu/navigation_menu"
            app:showAsAction="always"/>
        

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/round_back_white10_20"
        android:orientation="vertical"
        android:padding="1dp"
        android:radius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/round_back_secondery_100"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_profile" />

            <TextView
                android:id="@+id/textView_show_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_profile"
                android:layout_marginStart="50dp"
                android:hint="Loading"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_full_name"
                android:layout_marginTop="20dp"
                android:background="@android:color/black" />
            <!---show email -->
            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_email" />

            <TextView
                android:id="@+id/textView_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_name"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:hint="Loading"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_verify_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_name"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="250dp"
                android:layout_marginTop="30dp"
                android:hint="Loading" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_email"
                android:layout_marginTop="20dp"
                android:background="@android:color/black" />


            <!---show birthday -->
            <ImageView
                android:id="@+id/ic_dob"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_birthday" />

            <TextView
                android:id="@+id/textView_show_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_email"
                android:layout_alignStart="@id/ic_dob"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Loading"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_dob"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_dob"
                android:layout_marginTop="20dp"
                android:background="@android:color/black" />


            <!---show gender -->
            <ImageView
                android:id="@+id/ic_gender"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_dob"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_gender" />

            <TextView
                android:id="@+id/textView_show_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_dob"
                android:layout_alignStart="@id/ic_gender"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Loading"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_gender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView_show_gender"
                android:layout_marginTop="20dp"
                android:background="@android:color/black" />

            <!---show mobile -->
            <ImageView
                android:id="@+id/ic_mobile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_gender"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_mobile" />

            <TextView
                android:id="@+id/textView_show_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_gender"
                android:layout_alignStart="@id/ic_mobile"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Loading"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="10dp"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_your_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Your Ads"
                        android:textSize="30dp"
                        android:textColor="@color/black"

                        android:layout_marginStart="10dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Ads :"
                        android:textSize="20dp"
                        android:textColor="@color/black"

                        android:layout_below="@id/tv_your_ads"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Ads Count"
                        android:textSize="20dp"
                        android:textColor="@color/black"

                        android:layout_toEndOf="@id/tv_total_ads"
                        android:layout_below="@id/tv_your_ads"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads_sold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Ads Sold :"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        android:layout_below="@id/tv_total_ads"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads_sold_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Sold Count"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        android:layout_toEndOf="@id/tv_total_ads"
                        android:layout_below="@id/tv_total_ads_count"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Ads Available :"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        android:layout_below="@id/tv_total_ads_sold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"

                        />

                    <TextView
                        android:id="@+id/tv_total_ads_available_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Available Count"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        android:layout_toEndOf="@id/tv_total_ads"
                        android:layout_below="@id/tv_total_ads_sold_count"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"

                        />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>