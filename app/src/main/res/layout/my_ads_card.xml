<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp"
    android:id="@+id/myAdsCard"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/light_blue1"
        >

        <ImageView
            android:id="@+id/book_ad_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:src="@drawable/menu_book_24"

            />


        <TextView
            android:id="@+id/book_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Book Ad Title"
            android:textSize="25dp"

            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/book_ad_thumbnail"

            />

        <TextView
            android:id="@+id/book_ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Price"
            android:textSize="20dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@id/book_ad_title"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>